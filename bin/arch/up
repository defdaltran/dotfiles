#!/usr/bin/env bash
# ----------------------------------------------------------------------
# Description
#   Do packages upgrades and cleanup.
# ----------------------------------------------------------------------

# Remote unused packages
flag-command pacman -Qtdq && sudo pacman -Rns $(pacman -Qtdq) || true && \

# Full upgrade
flag-command yaourt -Syyua --devel && \

# Config files update
flag-command sudo pacdiffviewer
