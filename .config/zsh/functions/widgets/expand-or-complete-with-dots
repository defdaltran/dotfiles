#!/usr/bin/env zsh
# ------------------------------------------------------------------------------------------
# Description
#   ZLE widget that shows dots while completion is running.
#
# Usage
#   Bind it to ".":
#     autoload expand-or-complete-with-dots
#     zle -N expand-or-complete-with-dots
#     bindkey "^I" expand-or-complete-with-dots
# ------------------------------------------------------------------------------------------

echo -ne "\e[31mâ€¦\e[0m"
zle expand-or-complete
zle redisplay
